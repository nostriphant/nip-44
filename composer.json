{
    "name": "nostriphant/nip44",
    "description": "Nostr NIP-44 implementation in PHP",
    "type": "library",
    "require": {
        "php": "^8.3",
        "ext-sodium": "*",
        "nostriphant/nip01": "^1.0",
        "phpseclib/phpseclib": "^3.0"
    },
    "require-dev": {
        "pestphp/pest": "^2.35"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "nostriphant\\NIP44\\": "src/",
            "nostriphant\\NIP44Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Rik Meijer",
            "email": "rik@nostriphant.dev"
        }
    ],
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "test": [
            "./vendor/bin/pest"
        ]
    }
}
